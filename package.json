{
	"name": "userscript-x",
	"private": true,
	"version": "0.0.0",
	"description": "Modern development toolkit for userscripts",
	"type": "module",
	"engines": {
		"node": "^20.19.0 || >=22.12.0"
	},
	"scripts": {
		"build": "pnpm -r build",
		"dev": "pnpm -r --parallel dev",
		"test": "pnpm -r test",
		"lint": "biome lint",
		"format": "biome format --write",
		"check": "biome check --write",
		"release": "pnpm -r release"
	},
	"keywords": [
		"userscript",
		"violentmonkey",
		"tampermonkey",
		"greasemonkey",
		"devtools"
	],
	"author": "Alvaro Tinoco",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/mrmarble/userscript-x.git"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.1",
		"@types/cross-spawn": "^6.0.6",
		"@types/node": "^20.19.23",
		"commit-and-tag-version": "^12.6.0",
		"publint": "0.3.15",
		"typescript": "^5.9.3"
	},
	"packageManager": "pnpm@10.10.0"
}
